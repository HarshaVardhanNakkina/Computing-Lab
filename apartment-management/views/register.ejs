<div class="container-full mt-5">
	<div class="col-lg-4 col-md-6 m-auto">
		<div class="card card-body">
			<h1 class="text-center mb-3">
				<i class="fas fa-user-plus"></i> Register
			</h1>
			<div class="update-success-fail"></div>
			<% include ./partials/messages %>
			<div class="update-success-fail"></div>
			<form action="/users/register" id='register-form' method="POST">
				<div class="form-group">
					<label for="doornum">Door number (e.g. "1-N-12-799/29")</label>
					<input
						type="text"
						id="doornum"
						name="doornum"
						class="form-control"
						placeholder="Enter Door number"
						value="<%= typeof doornum != 'undefined' ? doornum : '' %>"
						required
					/>
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input
						type="email"
						id="email"
						name="email"
						class="form-control"
						placeholder="Enter Email"
						value="<%= typeof email != 'undefined' ? email : '' %>"
						required
					/>
				</div>
				<div class="form-group">
					<label for="mobile">Mobile number </label>
					<input
						type="text"
						id="mobile"
						name="mobile"
						class="form-control"
						placeholder="Enter Mobile number"
						value="<%= typeof mobile != 'undefined' ? mobile : '' %>"
						required
					/>
				</div>
